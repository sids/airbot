{
  "name": "airbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bunx tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "bun run src/index.ts",
    "start": "node dist/index.js",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "review": "bun run build && node dist/index.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.27",
    "octokit": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.0"
}
